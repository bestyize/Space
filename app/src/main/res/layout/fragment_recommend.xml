    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.ui.recommand.RecommendFragment">

    <com.thewind.space.main.ui.music.searchpage.ui.searchbar.CommonSearchBarView
        android:id="@+id/csv_search"
