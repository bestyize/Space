<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_gravity="top"
        android:layout_marginTop="48dp"
        android:orientation="vertical"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:singleLine="true"
            android:maxEms="20"
            android:ellipsize="end"
            android:text="我怀念的"
            android:id="@+id/tv_music_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="孙燕姿"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/tv_singers_name"
            android:textAlignment="center"
            android:singleLine="true"
            android:maxEms="25"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_center_cover"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/iv_player_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:id="@+id/ll_bottom"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/acs_seek_bar"
            android:thumb="@drawable/ic_music"
            android:progressBackgroundTint="@color/light_blue_900"
            android:progressTint="@color/white"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_curr_pos"
                android:textColor="@color/white"
                android:text="00:00"
                android:textSize="12sp"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_duration"
                android:textColor="@color/white"
                android:text="03:12"
                android:textSize="12sp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>


</FrameLayout>